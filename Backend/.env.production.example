# Backend Production Environment
# Copy to Backend/.env for production deployment
# Update with your production database credentials

PORT=5000

# Production Database Configuration
DB_HOST=your-production-db-host
DB_USER=your-db-username
DB_PASSWORD=your-secure-password
DB_NAME=grocery_store
DB_PORT=3306

# Production CORS - Update with your frontend production URL
CORS_ORIGIN=https://your-domain.com

# Production Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=abdul-rasheed-grocery-prod

