# Backend Server Configuration
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_USER=grocery_user
DB_PASSWORD=
DB_NAME=grocery_store
DB_PORT=3306

# CORS - Frontend URL
# For development (Vite may use 5173 or 5174)
# For production, use your domain
CORS_ORIGIN=http://localhost:5173

# Cloudinary Configuration for Image Upload
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=abdul-rasheed-grocery

# Node Environment
NODE_ENV=development

# Note: For production, use .env.production.example as template
# and update all credentials for your production environment